mkdir -p $HOME/.local/lpic
# 下载qrsctl
if [[ $(uname -r) =~ amd64 ]]; then
    wget -P $HOME/.local/lpic -c http://devtools.qiniu.com/linux/amd64/qrsctl
elif [[ $(uname -r) =~ 386 ]]; then
    wget -P $HOME/.local/lpic -c http://devtools.qiniu.com/linux/386/qrsctl
else
    echo "不支持的内核：" $(uname -r)
    exit 1
fi
mkdir -p $HOME/.local/bin
chmod +x $HOME/.local/lpic/qrsctl
ln -s $HOME/.local/lpic/qrsctl $HOME/.local/bin/qrsctl

# 下载lpic
wget -P $HOME/.local/lpic -c https://github.com/jlice/cli-tools/raw/master/lpic/lpic
wget -P $HOME/.local/lpic -c https://github.com/jlice/cli-tools/raw/master/lpic/lpic.rc
chmod +x $HOME/.local/lpic/lpic
ln -s $HOME/.local/lpic/lpic $HOME/.local/bin/lpic

# 配置
echo "请编辑 $HOME/.local/lpic/lpic.rc 进行配置"
if [[ ! $PATH =~ $HOME/.local/bin ]]; then
    echo "$HOME/.local/bin不在PATH中，建议添加"
fi
$HOME/.local/bin/lpic help
